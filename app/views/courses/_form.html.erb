<%= form_for(@course) do |f| %>
  <% if @course.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@course.errors.count, "error") %> prohibited this course from being saved:</h2>

      <ul>
      <% @course.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <%= f.hidden_field :late_options %>

  <table class="edit-form">
    <tr>
      <td><%= f.label :name %></td>
      <td><%= f.text_field :name %></td>
    </tr>
    <tr>
      <td><%= f.label :term_id, "Term" %></td>
      <td>
        <%= select("course", "term_id", @terms.map {|tt| [tt.name, tt.id]}) %>
      </td>
    </tr>
    <tr>
      <td>Late Penalty</td>
      <td>
	<p>Deduct
	<%= text_field_tag :late_penalty, @course.late_opts[0], :size => 10 %>
	percent every 
	<%= text_field_tag :late_repeat,  @course.late_opts[1], :size => 10 %>
	days late to a maximum of
	<%= text_field_tag :late_maximum, @course.late_opts[2], :size => 10 %>
	percent off.
      </td>
    </tr>
    <tr>
      <td>Course-Wide Footer</td>
      <td><%= f.text_area :footer, size: '40x10' %></td>
    </tr>
    <tr>
      <td>Questions Due At<br/>
      (0:00 is midnight *after* the day)</td>
      <td><%= f.time_select(:questions_due_time, {:minute_step => 15}) %></td>
    </tr>
    <tr>
      <td>&nbsp;</td>
      <td><%= f.submit %></td>
    </tr>
  </table>
<% end %>
