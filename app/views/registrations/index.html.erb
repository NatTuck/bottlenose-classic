<% @registrations.each do |registration| %>
  <tr>
    <td><%= registration.user.name %></td>
    <td><%= link_to 'Show', [@course, registration] %></td>
    <td><%= link_to 'Edit', [:edit, @course, registration] %></td>
    <td><%= link_to 'Destroy', [@course, registration], 
            { method: :delete, data: { confirm: 'Are you sure?' } } %></td>
  </tr>
<% end %>
</table>

