<%= form_for [@course, @registration] do |f| %>
  <% if @registration.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@registration.errors.count, "error") %> prohibited this registration from being saved:</h2>

      <ul>
      <% @registration.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <%= f.hidden_field :course_id %>
  <%= f.hidden_field :user_id %>

  <div class="form-group">
    <%= label_tag :tags, "Tags" %>
    <%= f.text_field :tags %>
    <p>Seperate tags with semicolon (e.g. "lab3; sec1; a-goat").</p>
  </div>
  <div class="form-group">
    <%= label_tag :teacher, "Teacher?" %>
    <%= f.check_box :teacher %>
  </div>
  <div class="form-group">
    <%= label_tag :show_in_lists, "Show In Lists?" %>
    <%= f.check_box :show_in_lists %>
  </div>

  <div class="form-group">
    <%= f.submit nil, class: 'btn btn-primary' %>
  </div>
<% end %>
