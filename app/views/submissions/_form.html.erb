<%= form_for [@assignment, @submission] do |f| %>
  <%= f.hidden_field :assignment_id %>
  <%= f.hidden_field :user_id %>

  <% if @submission.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@submission.errors.count, "error") %> prohibited this submission from being saved:</h2>

      <ul>
      <% @submission.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <% if @assignment.team_subs? %>
    <p>This will be a team submission.</p>
    <p>Team members: <%= @team.member_names %>
  <% end %>

  <div class="form-group">
    <%= f.label :student_notes %>
    <%= f.text_area :student_notes, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :upload_file %>
    <%= f.file_field :upload_file %>
  </div>
  <div class="form-group">
    <%= f.submit nil, class: 'btn btn-primary' %>
  </div>
<% end %>
