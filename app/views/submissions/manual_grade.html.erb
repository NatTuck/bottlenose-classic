<% @page_title = "Manually Add Grade" %>

<p><%= link_to "Back to Assignment", @assignment %></p>

<h1>Create grade for assignment: <%= @assignment.name %></h1>

<%= form_for [@assignment, @submission] do |f| %>
  <%= f.hidden_field :assignment_id %>
  <%= f.hidden_field :ignore_late_penalty %>
  <%= f.hidden_field :file_name %>

  <div class="form-group">
    Student:
    <%= f.select :user_id, select_user_hash(@users), {:include_blank => true} %>
  </div>
  <div class="form-group">
    Teacher Notes:<br>
    <%= f.text_area :teacher_notes, :class => "rich-text form-control" %>
  </div>
  <div class="form-group">
    Teacher Grade:<br>
    <%= f.text_field :teacher_score, size: 10 %> /
      <%= @assignment.points_available %>
  </div>
  <div class="form-group">
    <%= submit_tag "Save Grade", class: 'btn btn-primary' %>
  </div>
<% end %>
