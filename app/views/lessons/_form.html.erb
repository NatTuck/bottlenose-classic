<%= form_for [@chapter, @lesson] do |f| %>
  <% if @lesson.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@lesson.errors.count, "error") %> prohibited this lesson from being saved:</h2>

      <ul>
      <% @lesson.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <%= f.hidden_field :chapter_id %>

  <table class="edit-form">
    <tr>
      <td><%= f.label :name %></td>
      <td><%= f.text_field :name %></td>
    </tr>
    <tr>
      <td><%= f.label :video, "Main Video" %></td>
      <td>
	<p>(Please paste YouTube embed code here.)</p>
	<p><%= f.text_area :video, size: "40x5" %></p>
      </td>
    </tr>
    <tr>
      <td><%= f.label :question, "Question" %></td>
      <td>
	<p>(Expects the question and one form field named "answer[answer]".)</p>
	<p><%= f.text_area :question, size: "60x8" %></p>
      </td>
    </tr>
    <tr>
      <td><%= f.label :correct_answer, "Correct Answer" %></td>
      <td>
	<p>(Matched exactly.)</p>
	<p><%= f.text_field :correct_answer %></p>
      </td>
    </tr>
    <tr>
      <td><%= f.label :video2, "Post-Question Video" %></td>
      <td>
	<p>(Please paste YouTube embed code here.)</p>
	<p><%= f.text_area :video2, size: "40x5" %></p>
      </td>
    </tr>
    <tr>
      <td>&nbsp;</td>
      <td><%= f.submit %></td>
    </tr>
  </table>

<% end %>
