<%= form_for [@chapter, @lesson] do |f| %>
  <% if @lesson.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@lesson.errors.count, "error") %> prohibited this lesson from being saved:</h2>

      <ul>
      <% @lesson.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <%= f.hidden_field :chapter_id %>

  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :questions_due%>
    <%= f.text_field :questions_due, 
                     'data-provide' => 'datepicker', class: 'form-control' %>
    <p>(Late after this day.)</p>
  </div>
  <div class="form-group">
    <%= f.label :video, "Main Video" %>
    <%= f.text_area :video, class: 'form-control' %>
    <p>(Please paste YouTube embed code here.)</p>
  </div>
  <div class="form-group">
    <%= f.label :notes, "Instructor Notes" %>
    <%= f.text_area :notes, class: 'form-control' %>
    <p>(Non-video lesson text goes here.)</p>
  </tr>
  <tr class="form-group">
    <%= f.submit nil, class: 'btn btn-primary' %>
  </div>

<% end %>
