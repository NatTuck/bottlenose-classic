<% @page_title = "Teams for #{@course.name}" %>

<p id="notice"><%= notice %></p>

<table>
  <thead>
    <tr>
      <th>Course</th>
      <th>Start date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @teams.each do |team| %>
      <tr>
        <td><%= team.course_id %></td>
        <td><%= team.start_date %></td>
        <td><%= link_to 'Show', team %></td>
        <td><%= link_to 'Edit', edit_course_team_path(@course, team) %></td>
        <td><%= link_to 'Destroy', team, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Team', new_course_team_path(@course) %>
