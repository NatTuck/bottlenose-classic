
<% if @saved %>

  $('#submit-button-<%= @question.id %>').hide();
  $('#bonus-video-<%= @question.id %>').show();

  <% if @answer.answer == @answer.correct_answer %>
    $('#answer-right-<%= @question.id %>').show();
  <% else %>
    $('#answer-wrong-<%= @question.id %>').show();
  <% end %>

<% else %>

  var messages = JSON.stringify(<%= raw @errors %>);
  alert("Error saving answer: " + messages);

<% end %>