<% @page_title = "User: #{@user.name}" %>

<p>
<%= link_to 'Back to List', users_path %> |
<%= link_to 'Edit User', edit_user_path(@user) %>
</p>

<table class="table">
<tr>
  <td>Name:</td>
  <td><%= @user.name %></td>
</tr>
<tr>
  <td>Email:</td>
  <td><%= @user.email %></td>
</tr>
<tr>
  <td>Site Admin?</td>
  <td><%= @user.site_admin? ? "Yes" : "No" %></td>
</tr>
</table>

<h2>Enrolled Courses</h2>

<table class="table table-striped">
<% @user.registrations.sort_by {|rr| rr.course.name }.each do |reg| %>
  <tr>
    <td>
      <%= link_to reg.course.name, reg.course %>
      <% if reg.teacher? %>
        (Teacher)
      <% end %>
    </td>
    <td>
      <%= link_to "Status", reg %>
    </td>
<% end %>
</table>
