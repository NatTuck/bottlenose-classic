<% @page_title = "Manage Users" %>

<h2>Add A User</h1>

<%= render 'form' %>

<h2>Existing Users</h2>

<table class="table table-striped">
  <tr>
    <th>Name</th>
    <th>Email</th>
    <th></th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @users.each do |user| %>
  <tr>
    <td><%= user.name %></td>
    <td><%= user.email %></td>
    <td><%= link_to 'Show', user, class: 'btn btn-default' %></td>
    <td><%= link_to 'Edit', edit_user_path(user), class: 'btn btn-default' %></td>
    <td>
      <%= link_to 'Destroy', user, method: :delete, 
        data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %>
    </td>
    <td><%= link_to('Impersonate', user_path(user) + '/impersonate', 
                    method: 'post', class: 'btn btn-warning') %></td>
  </tr>
<% end %>
</table>
